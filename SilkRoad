public class SilkRoad {
    private Road road;
    private int length;
    private int profit;
    private boolean lastOperationOK;

    public SilkRoad(int length) {
        this.length = length;
        this.profit = 0;
        this.lastOperationOK = true;
        road = new Road(length, this);
    }

    public void placeStore(int location, int tenges) {
        lastOperationOK = road.placeStore(location, tenges);
    }

    public void removeStore(int location) {
        lastOperationOK = road.removeStore(location);
    }

    public void placeRobot(int location) {
        lastOperationOK = road.placeRobot(location);
    }

    public void removeRobot(int location) {
        lastOperationOK = road.removeRobot(location);
    }

    public void moveRobot(int location, int meters) {
        lastOperationOK = road.moveRobot(location, meters);
    }

    public void resupplyStores() {
        lastOperationOK = road.resupplyStores();
    }

    public void returnRobots() {
        lastOperationOK = road.returnRobots();
    }

    public void reboot() {
        lastOperationOK = road.reboot();
        profit = 0;
    }

    public int porfit() {
        return profit;
    }

    public int[][] stores() {
        return road.stores();
    }

    public int[][] robots() {
        return road.robots();
    }

    public void makeVisible() {
        road.makeVisible();
    }

    public void makeInvisible() {
        road.makeInvisible();
    }

    public void finish() {
        road.finish();
    }

    public boolean ok() {
        return lastOperationOK;
    }

    public int getLength() {
        return length;
    }
}
