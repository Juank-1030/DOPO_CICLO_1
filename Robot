public class Robot {
    private int locationInitial;
    private int locationCurrent;
    private String color;
    private Circle innerCircle;

    public Robot(int location, String color, int x, int y) {
        this.locationInitial = location;
        this.locationCurrent = location;
        this.color = color;

        innerCircle = new Circle(36); // Más pequeño, relleno
        innerCircle.changeColor(color);
        innerCircle.setPosition(x + 27, y + 27); // Centrado en el cell de 90x90
        innerCircle.makeVisible();
    }

    public void setVisible(boolean visible) {
        if (visible) {
            innerCircle.makeVisible();
        } else {
            innerCircle.makeInvisible();
        }
    }

    public void moveTo(int x, int y) {
        innerCircle.setPosition(x + 27, y + 27);
    }

    public void returnHome(int x, int y) {
        locationCurrent = locationInitial;
        moveTo(x, y);
    }

    public int getLocation() { return locationCurrent; }
    public void setLocation(int location) { this.locationCurrent = location; }
}
